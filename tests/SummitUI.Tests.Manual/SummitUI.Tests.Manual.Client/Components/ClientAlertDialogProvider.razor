@* 
    Client-side AlertDialogProvider wrapper.
    This component lives in the WASM project so it can use RenderFragment<T>.
    RenderFragment<T> cannot cross render mode boundaries (Server -> WASM).
*@

<AlertDialogProvider Context="alert">
    <AlertDialogPortal>
        <AlertDialogOverlay class="alert-dialog-overlay" />
        <AlertDialogContent class="alert-dialog-content">
            <AlertDialogTitle class="alert-dialog-title" />
            <AlertDialogDescription class="alert-dialog-description" />
            <div class="alert-dialog-actions">
                <AlertDialogCancel class="btn btn-secondary" />
                <AlertDialogConfirm class="@(alert.Options.IsDestructive ? "btn btn-danger" : "btn btn-primary")" />
            </div>
        </AlertDialogContent>
    </AlertDialogPortal>
</AlertDialogProvider>
