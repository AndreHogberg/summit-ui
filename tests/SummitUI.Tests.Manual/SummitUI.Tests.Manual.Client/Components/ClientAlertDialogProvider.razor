@* 
    Client-side AlertDialogProvider wrapper.
    This component lives in the WASM project so it can use RenderFragment<T>.
    RenderFragment<T> cannot cross render mode boundaries (Server -> WASM).
*@

<SmAlertDialogProvider Context="alert">
    <SmAlertDialogPortal data-testid="alert-portal">
        <SmAlertDialogOverlay class="alert-dialog-overlay" data-testid="alert-overlay"/>
        <SmAlertDialogContent class="alert-dialog-content" data-testid="alert-content">
            <SmAlertDialogTitle class="alert-dialog-title" data-testid="alert-title"/>
            <SmAlertDialogDescription class="alert-dialog-description" data-testid="alert-description"/>
            <div class="alert-dialog-actions">
                <SmAlertDialogCancel class="btn btn-secondary" data-testid="alert-cancel"/>
                <SmAlertDialogConfirm class="@(alert.Options!.IsDestructive ? "btn btn-danger" : "btn btn-primary")" data-testid="alert-confirm"/>
            </div>
        </SmAlertDialogContent>
    </SmAlertDialogPortal>
</SmAlertDialogProvider>
