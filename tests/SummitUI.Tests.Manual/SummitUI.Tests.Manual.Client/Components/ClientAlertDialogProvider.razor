@* 
    Client-side AlertDialogProvider wrapper.
    This component lives in the WASM project so it can use RenderFragment<T>.
    RenderFragment<T> cannot cross render mode boundaries (Server -> WASM).
*@

<AlertDialogProvider Context="alert">
    <AlertDialogPortal data-testid="alert-portal">
        <AlertDialogOverlay class="alert-dialog-overlay" data-testid="alert-overlay"/>
        <AlertDialogContent class="alert-dialog-content" data-testid="alert-content">
            <AlertDialogTitle class="alert-dialog-title" data-testid="alert-title"/>
            <AlertDialogDescription class="alert-dialog-description" data-testid="alert-description"/>
            <div class="alert-dialog-actions">
                <AlertDialogCancel class="btn btn-secondary" data-testid="alert-cancel"/>
                <AlertDialogConfirm class="@(alert.Options.IsDestructive ? "btn btn-danger" : "btn btn-primary")" data-testid="alert-confirm"/>
            </div>
        </AlertDialogContent>
    </AlertDialogPortal>
</AlertDialogProvider>
