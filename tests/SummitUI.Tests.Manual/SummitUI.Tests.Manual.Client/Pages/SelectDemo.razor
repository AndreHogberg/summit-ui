@page "/select"
@rendermode InteractiveWebAssembly

<h1>Select Component Demo</h1>
<section>
    <h2>Basic Select (string values)</h2>
    <p>A simple select with placeholder and options using string values.</p>
    
    <SelectRoot TValue="string" @bind-Value="selectedFruit">
        <SelectTrigger TValue="string" class="select-trigger">
            <SelectValue TValue="string" Placeholder="Select a fruit..." />
            <span class="select-icon">&#9662;</span>
        </SelectTrigger>
        <SelectPortal TValue="string">
            <SelectContent TValue="string" class="select-content" SideOffset="4">
                <SelectViewport TValue="string" class="select-viewport">
                    <SelectItem TValue="string" Value="@("apple")" Label="Apple">
                        <SelectItemText>Apple</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="string" Value="@("banana")" Label="Banana">
                        <SelectItemText>Banana</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="string" Value="@("orange")" Label="Orange">
                        <SelectItemText>Orange</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="string" Value="@("grape")" Label="Grape">
                        <SelectItemText>Grape</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="string" Value="@("mango")" Label="Mango">
                        <SelectItemText>Mango</SelectItemText>
                    </SelectItem>
                </SelectViewport>
            </SelectContent>
        </SelectPortal>
    </SelectRoot>
    
    <p style="margin-top: 1rem;">Selected: <strong>@(selectedFruit ?? "None")</strong></p>
</section>

<section style="margin-top: 2rem;">
    <h2>Enum Values</h2>
    <p>Select with strongly-typed enum values. Uses DefaultValue for initial state.</p>
    
    <SelectRoot TValue="Priority" Value="selectedPriority" ValueChanged="@(v => selectedPriority = v)" DefaultValue="Priority.Medium">
        <SelectTrigger TValue="Priority" class="select-trigger">
            <SelectValue TValue="Priority" Placeholder="Select priority..." />
            <span class="select-icon">&#9662;</span>
        </SelectTrigger>
        <SelectPortal TValue="Priority">
            <SelectContent TValue="Priority" class="select-content" SideOffset="4">
                <SelectViewport TValue="Priority" class="select-viewport">
                    <SelectItem TValue="Priority" Value="Priority.Low" Label="Low">
                        <SelectItemText>Low Priority</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="Priority" Value="Priority.Medium" Label="Medium">
                        <SelectItemText>Medium Priority</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="Priority" Value="Priority.High" Label="High">
                        <SelectItemText>High Priority</SelectItemText>
                    </SelectItem>
                    <SelectItem TValue="Priority" Value="Priority.Critical" Label="Critical">
                        <SelectItemText>Critical Priority</SelectItemText>
                    </SelectItem>
                </SelectViewport>
            </SelectContent>
        </SelectPortal>
    </SelectRoot>
    
    <p style="margin-top: 1rem;">Selected: <strong>@selectedPriority</strong></p>
</section>

<section style="margin-top: 2rem;">
    <h2>Object Values</h2>
    <p>Select with complex object values. Uses Key parameter for unique identification.</p>
    
    <SelectRoot TValue="Country" @bind-Value="selectedCountryObject">
        <SelectTrigger TValue="Country" class="select-trigger">
            <SelectValue TValue="Country" Placeholder="Select a country..." />
            <span class="select-icon">&#9662;</span>
        </SelectTrigger>
        <SelectPortal TValue="Country">
            <SelectContent TValue="Country" class="select-content" SideOffset="4">
                <SelectViewport TValue="Country" class="select-viewport">
                    @foreach (var country in countries)
                    {
                        <SelectItem TValue="Country" Value="country" Key="@country.Code" Label="@country.Name">
                            <SelectItemText>@country.Name (@country.Code)</SelectItemText>
                        </SelectItem>
                    }
                </SelectViewport>
            </SelectContent>
        </SelectPortal>
    </SelectRoot>
    
    <p style="margin-top: 1rem;">Selected: <strong>@(selectedCountryObject?.Name ?? "None")</strong></p>
</section>

<section style="margin-top: 2rem;">
    <h2>Grouped Items</h2>
    <p>Items can be organized into groups with labels.</p>
    
    <SelectRoot TValue="string" @bind-Value="selectedFood">
        <SelectTrigger TValue="string" class="select-trigger">
            <SelectValue TValue="string" Placeholder="Choose food..." />
            <span class="select-icon">&#9662;</span>
        </SelectTrigger>
        <SelectPortal TValue="string">
            <SelectContent TValue="string" class="select-content" SideOffset="4">
                <SelectViewport TValue="string" class="select-viewport">
                    <SelectGroup TValue="string">
                        <SelectGroupLabel class="select-group-label">Fruits</SelectGroupLabel>
                        <SelectItem TValue="string" Value="@("apple")" Label="Apple">
                            <SelectItemText>Apple</SelectItemText>
                        </SelectItem>
                        <SelectItem TValue="string" Value="@("banana")" Label="Banana">
                            <SelectItemText>Banana</SelectItemText>
                        </SelectItem>
                        <SelectItem TValue="string" Value="@("orange")" Label="Orange">
                            <SelectItemText>Orange</SelectItemText>
                        </SelectItem>
                    </SelectGroup>
                    <SelectGroup TValue="string">
                        <SelectGroupLabel class="select-group-label">Vegetables</SelectGroupLabel>
                        <SelectItem TValue="string" Value="@("carrot")" Label="Carrot">
                            <SelectItemText>Carrot</SelectItemText>
                        </SelectItem>
                        <SelectItem TValue="string" Value="@("broccoli")" Label="Broccoli">
                            <SelectItemText>Broccoli</SelectItemText>
                        </SelectItem>
                        <SelectItem TValue="string" Value="@("spinach")" Label="Spinach">
                            <SelectItemText>Spinach</SelectItemText>
                        </SelectItem>
                    </SelectGroup>
                </SelectViewport>
            </SelectContent>
        </SelectPortal>
    </SelectRoot>
    
    <p style="margin-top: 1rem;">Selected: <strong>@(selectedFood ?? "None")</strong></p>
</section>

<section style="margin-top: 2rem;">
