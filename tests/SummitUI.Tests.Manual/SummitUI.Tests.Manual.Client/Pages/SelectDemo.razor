<section style="margin-top: 2rem;" data-testid="basic-form-section">
    <h2>Basic Form</h2>
    <p>Select with form name and validation states.</p>

    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault>
        <div style="margin-bottom: 1rem;">
            <label id="country-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Country</label>
            <SelectRoot TValue="string" @bind-Value="selectedCountry" Name="country" Required="true" Invalid="@showValidation">
                <SelectTrigger TValue="string" class="select-trigger" AriaLabelledBy="country-label">
                    <SelectValue TValue="string" Placeholder="Select your country..." />
                    <span class="select-icon">&#9662;</span>
                </SelectTrigger>
                <SelectPortal TValue="string">
                    <SelectContent TValue="string" class="select-content" SideOffset="4">
                        <SelectViewport TValue="string" class="select-viewport">
                            <SelectItem TValue="string" Value="@("us")" Label="United States">
                                <SelectItemText>United States</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("uk")" Label="United Kingdom">
                                <SelectItemText>United Kingdom</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("ca")" Label="Canada">
                                <SelectItemText>Canada</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("au")" Label="Australia">
                                <SelectItemText>Australia</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("de")" Label="Germany">
                                <SelectItemText>Germany</SelectItemText>
                            </SelectItem>
                        </SelectViewport>
                    </SelectContent>
                </SelectPortal>
            </SelectRoot>
            @if (showValidation && string.IsNullOrEmpty(selectedCountry))
            {
                <p style="color: #dc3545; font-size: 0.875rem; margin-top: 0.25rem;">Please select a country</p>
            }
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <p style="margin-top: 1rem;">Selected: <strong>@(selectedCountry ?? "None")</strong></p>
</section>

<section style="margin-top: 2rem;" data-testid="editform-section">
    <h2>EditForm Integration</h2>
    <p>Select integrated with Blazor EditForm for model validation.</p>

    <EditForm EditContext="editContext" OnSubmit="HandleEditFormSubmit" FormName="selectEditForm">
        <DataAnnotationsValidator />

        <div style="margin-bottom: 1rem;">
            <label id="editform-category-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Category (Required)</label>
            <SelectRoot TValue="string"
                        @bind-Value="formModel.Category"
                        Name="category"
                        Required="true"
                        Invalid="@(editFormSubmitted && string.IsNullOrEmpty(formModel.Category))">
                <SelectTrigger TValue="string" class="select-trigger" AriaLabelledBy="editform-category-label" data-testid="editform-category-trigger">
                    <SelectValue TValue="string" Placeholder="Select a category..." />
                    <span class="select-icon">&#9662;</span>
                </SelectTrigger>
                <SelectPortal TValue="string">
                    <SelectContent TValue="string" class="select-content" SideOffset="4">
                        <SelectViewport TValue="string" class="select-viewport">
                            <SelectItem TValue="string" Value="@("electronics")" Label="Electronics">
                                <SelectItemText>Electronics</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("clothing")" Label="Clothing">
                                <SelectItemText>Clothing</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("books")" Label="Books">
                                <SelectItemText>Books</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("home")" Label="Home & Garden">
                                <SelectItemText>Home & Garden</SelectItemText>
                            </SelectItem>
                        </SelectViewport>
                    </SelectContent>
                </SelectPortal>
            </SelectRoot>
            <ValidationMessage For="@(() => formModel.Category)" />
            @if (editFormSubmitted && string.IsNullOrEmpty(formModel.Category))
            {
                <p class="validation-error" style="color: #dc3545; font-size: 0.875rem; margin-top: 0.25rem;">Category is required</p>
            }
        </div>

        <div style="margin-bottom: 1rem;">
            <label id="editform-priority-label" style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Priority Level</label>
            <SelectRoot TValue="string"
                        @bind-Value="formModel.Priority"
                        Name="priority">
                <SelectTrigger TValue="string" class="select-trigger" AriaLabelledBy="editform-priority-label" data-testid="editform-priority-trigger">
                    <SelectValue TValue="string" Placeholder="Select priority..." />
                    <span class="select-icon">&#9662;</span>
                </SelectTrigger>
                <SelectPortal TValue="string">
                    <SelectContent TValue="string" class="select-content" SideOffset="4">
                        <SelectViewport TValue="string" class="select-viewport">
                            <SelectItem TValue="string" Value="@("low")" Label="Low">
                                <SelectItemText>Low</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("medium")" Label="Medium">
                                <SelectItemText>Medium</SelectItemText>
                            </SelectItem>
                            <SelectItem TValue="string" Value="@("high")" Label="High">
                                <SelectItemText>High</SelectItemText>
                            </SelectItem>
                        </SelectViewport>
                    </SelectContent>
                </SelectPortal>
            </SelectRoot>
        </div>

        <button type="submit" class="btn btn-primary" data-testid="editform-submit">Submit EditForm</button>
    </EditForm>

    <div style="margin-top: 1rem;" data-testid="editform-result">
        <p>Category: <strong data-testid="editform-category-value">@(formModel.Category ?? "None")</strong></p>
        <p>Priority: <strong data-testid="editform-priority-value">@(formModel.Priority ?? "None")</strong></p>
        @if (editFormSubmitSuccess)
        {
            <p style="color: #198754;" data-testid="editform-success-message">Form submitted successfully!</p>
        }
    </div>
</section>

