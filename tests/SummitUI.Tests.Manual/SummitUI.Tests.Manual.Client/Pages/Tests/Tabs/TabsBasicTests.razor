@page "/tests/tabs/basic"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Tabs Basic Tests</h1>
    
    <!-- Basic Tabs for ARIA, selection, focus, content visibility tests -->
    <div class="test-section" data-testid="basic-section">
        <h2>Basic Tabs</h2>
        <SmTabsRoot DefaultValue="account">
            <SmTabsList class="tabs-list" data-testid="basic-tabs-list">
                <SmTabsTrigger Value="account" class="tabs-trigger" data-testid="trigger-account">Account</SmTabsTrigger>
                <SmTabsTrigger Value="password" class="tabs-trigger" data-testid="trigger-password">Password</SmTabsTrigger>
                <SmTabsTrigger Value="settings" Disabled="true" class="tabs-trigger" data-testid="trigger-settings">Settings</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="account" data-testid="content-account">
                Account settings content
            </SmTabsContent>
            <SmTabsContent Value="password" data-testid="content-password">
                Password settings content
            </SmTabsContent>
            <SmTabsContent Value="settings" data-testid="content-settings">
                Settings content
            </SmTabsContent>
        </SmTabsRoot>
    </div>
    
    <!-- Controlled Mode -->
    <div class="test-section" data-testid="controlled-section">
        <h2>Controlled Mode</h2>
        <div class="d-flex flex-column gap-3">
            <SmTabsRoot @bind-Value="_controlledValue">
                <SmTabsList>
                    <SmTabsTrigger Value="tab1" data-testid="controlled-trigger-1">Tab 1</SmTabsTrigger>
                    <SmTabsTrigger Value="tab2" data-testid="controlled-trigger-2">Tab 2</SmTabsTrigger>
                    <SmTabsTrigger Value="tab3" data-testid="controlled-trigger-3">Tab 3</SmTabsTrigger>
                </SmTabsList>
                <SmTabsContent Value="tab1" data-testid="controlled-content-1">
                    Tab 1 content
                </SmTabsContent>
                <SmTabsContent Value="tab2" data-testid="controlled-content-2">
                    Tab 2 content
                </SmTabsContent>
                <SmTabsContent Value="tab3" data-testid="controlled-content-3">
                    Tab 3 content
                </SmTabsContent>
            </SmTabsRoot>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-secondary" @onclick='() => _controlledValue = "tab1"' data-testid="set-tab1">
                    Set Tab 1
                </button>
                <button type="button" class="btn btn-secondary" @onclick='() => _controlledValue = "tab2"' data-testid="set-tab2">
                    Set Tab 2
                </button>
                <button type="button" class="btn btn-secondary" @onclick='() => _controlledValue = "tab3"' data-testid="set-tab3">
                    Set Tab 3
                </button>
                <span data-testid="controlled-value">Current: @_controlledValue</span>
            </div>
        </div>
    </div>
    
    <!-- Multiple Tabs for ID Uniqueness Test -->
    <div class="test-section" data-testid="multiple-section">
        <h2>Multiple Tabs (ID Uniqueness)</h2>
        <SmTabsRoot DefaultValue="first">
            <SmTabsList>
                <SmTabsTrigger Value="first">First</SmTabsTrigger>
                <SmTabsTrigger Value="second">Second</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="first">First content</SmTabsContent>
            <SmTabsContent Value="second">Second content</SmTabsContent>
        </SmTabsRoot>
        <SmTabsRoot DefaultValue="alpha">
            <SmTabsList>
                <SmTabsTrigger Value="alpha">Alpha</SmTabsTrigger>
                <SmTabsTrigger Value="beta">Beta</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="alpha">Alpha content</SmTabsContent>
            <SmTabsContent Value="beta">Beta content</SmTabsContent>
        </SmTabsRoot>
    </div>
</div>
}

<style>
    .test-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
    }
</style>

@code {
    private string? _controlledValue = "tab1";
}
