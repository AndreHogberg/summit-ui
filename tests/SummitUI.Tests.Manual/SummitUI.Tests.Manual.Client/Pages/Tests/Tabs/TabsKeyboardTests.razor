@page "/tests/tabs/keyboard"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Tabs Keyboard Tests</h1>
    
    <!-- Auto activation mode (default) - activates on arrow navigation -->
    <div class="test-section" data-testid="auto-section">
        <h2>Auto Activation Mode</h2>
        <SmTabsRoot DefaultValue="account" ActivationMode="TabsActivationMode.Auto">
            <SmTabsList class="tabs-list" data-testid="auto-tabs-list">
                <SmTabsTrigger Value="account" class="tabs-trigger" data-testid="auto-trigger-account">Account</SmTabsTrigger>
                <SmTabsTrigger Value="password" class="tabs-trigger" data-testid="auto-trigger-password">Password</SmTabsTrigger>
                <SmTabsTrigger Value="settings" Disabled="true" class="tabs-trigger" data-testid="auto-trigger-settings">Settings (Disabled)</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="account" class="tabs-content" data-testid="auto-content-account">
                Account settings content
            </SmTabsContent>
            <SmTabsContent Value="password" class="tabs-content" data-testid="auto-content-password">
                Password settings content
            </SmTabsContent>
            <SmTabsContent Value="settings" class="tabs-content" data-testid="auto-content-settings">
                Settings content
            </SmTabsContent>
        </SmTabsRoot>
    </div>
    
    <!-- Manual activation mode - requires Enter/Space to activate -->
    <div class="test-section" data-testid="manual-section">
        <h2>Manual Activation Mode</h2>
        <SmTabsRoot DefaultValue="tab1" ActivationMode="TabsActivationMode.Manual">
            <SmTabsList class="tabs-list" data-testid="manual-tabs-list">
                <SmTabsTrigger Value="tab1" class="tabs-trigger" data-testid="manual-trigger-1">Tab 1</SmTabsTrigger>
                <SmTabsTrigger Value="tab2" class="tabs-trigger" data-testid="manual-trigger-2">Tab 2</SmTabsTrigger>
                <SmTabsTrigger Value="tab3" class="tabs-trigger" data-testid="manual-trigger-3">Tab 3</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="tab1" class="tabs-content" data-testid="manual-content-1">
                Tab 1 content
            </SmTabsContent>
            <SmTabsContent Value="tab2" class="tabs-content" data-testid="manual-content-2">
                Tab 2 content
            </SmTabsContent>
            <SmTabsContent Value="tab3" class="tabs-content" data-testid="manual-content-3">
                Tab 3 content
            </SmTabsContent>
        </SmTabsRoot>
    </div>
    
    <!-- Horizontal orientation (default) -->
    <div class="test-section" data-testid="horizontal-section">
        <h2>Horizontal Orientation</h2>
        <SmTabsRoot DefaultValue="first" Orientation="TabsOrientation.Horizontal">
            <SmTabsList class="tabs-list" data-testid="horizontal-tabs-list">
                <SmTabsTrigger Value="first" class="tabs-trigger" data-testid="horizontal-trigger-first">First</SmTabsTrigger>
                <SmTabsTrigger Value="second" class="tabs-trigger" data-testid="horizontal-trigger-second">Second</SmTabsTrigger>
                <SmTabsTrigger Value="third" class="tabs-trigger" data-testid="horizontal-trigger-third">Third</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="first" class="tabs-content">First content</SmTabsContent>
            <SmTabsContent Value="second" class="tabs-content">Second content</SmTabsContent>
            <SmTabsContent Value="third" class="tabs-content">Third content</SmTabsContent>
        </SmTabsRoot>
    </div>
    
    <!-- Vertical orientation - uses ArrowUp/ArrowDown -->
    <div class="test-section" data-testid="vertical-section">
        <h2>Vertical Orientation</h2>
        <div class="d-flex">
            <SmTabsRoot DefaultValue="first" Orientation="TabsOrientation.Vertical">
                <SmTabsList class="tabs-list-vertical" data-testid="vertical-tabs-list">
                    <SmTabsTrigger Value="first" class="tabs-trigger-vertical" data-testid="vertical-trigger-first">First</SmTabsTrigger>
                    <SmTabsTrigger Value="second" class="tabs-trigger-vertical" data-testid="vertical-trigger-second">Second</SmTabsTrigger>
                    <SmTabsTrigger Value="third" class="tabs-trigger-vertical" data-testid="vertical-trigger-third">Third</SmTabsTrigger>
                </SmTabsList>
                <div class="tabs-content-vertical-container">
                    <SmTabsContent Value="first" class="tabs-content" data-testid="vertical-content-first">First content</SmTabsContent>
                    <SmTabsContent Value="second" class="tabs-content" data-testid="vertical-content-second">Second content</SmTabsContent>
                    <SmTabsContent Value="third" class="tabs-content" data-testid="vertical-content-third">Third content</SmTabsContent>
                </div>
            </SmTabsRoot>
        </div>
    </div>
    
    <!-- Wrap around navigation -->
    <div class="test-section" data-testid="wrap-section">
        <h2>Wrap Around Navigation (Loop enabled)</h2>
        <SmTabsRoot DefaultValue="first" Loop="true">
            <SmTabsList class="tabs-list" data-testid="wrap-tabs-list">
                <SmTabsTrigger Value="first" class="tabs-trigger" data-testid="wrap-trigger-first">First</SmTabsTrigger>
                <SmTabsTrigger Value="second" class="tabs-trigger" data-testid="wrap-trigger-second">Second</SmTabsTrigger>
                <SmTabsTrigger Value="third" class="tabs-trigger" data-testid="wrap-trigger-third">Third</SmTabsTrigger>
            </SmTabsList>
            <SmTabsContent Value="first" class="tabs-content">First content</SmTabsContent>
            <SmTabsContent Value="second" class="tabs-content">Second content</SmTabsContent>
            <SmTabsContent Value="third" class="tabs-content">Third content</SmTabsContent>
        </SmTabsRoot>
    </div>
</div>
}

<style>
    .tabs-list {
        display: flex;
        gap: 4px;
        border-bottom: 1px solid #e0e0e0;
        margin-bottom: 1rem;
    }
    
    .tabs-list-vertical {
        display: flex;
        flex-direction: column;
        gap: 4px;
        border-right: 1px solid #e0e0e0;
        padding-right: 1rem;
        margin-right: 1rem;
    }
    
    .tabs-trigger {
        all: unset;
        padding: 8px 16px;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        transition: border-color 0.2s;
    }
    
    .tabs-trigger-vertical {
        all: unset;
        padding: 8px 16px;
        cursor: pointer;
        border-right: 2px solid transparent;
        transition: border-color 0.2s;
    }
    
    .tabs-trigger:hover:not([data-disabled]),
    .tabs-trigger-vertical:hover:not([data-disabled]) {
        background-color: #f5f5f5;
    }
    
    .tabs-trigger:focus-visible,
    .tabs-trigger-vertical:focus-visible {
        outline: 2px solid #000;
        outline-offset: 2px;
    }
    
    .tabs-trigger[data-state='active'] {
        border-bottom-color: #000;
        font-weight: 600;
    }
    
    .tabs-trigger-vertical[data-state='active'] {
        border-right-color: #000;
        font-weight: 600;
    }
    
    .tabs-trigger[data-disabled],
    .tabs-trigger-vertical[data-disabled] {
        opacity: 0.5;
        cursor: not-allowed;
    }
    
    .tabs-content {
        padding: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
    }
    
    .tabs-content-vertical-container {
        flex: 1;
    }
    
    .test-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
    }
</style>
