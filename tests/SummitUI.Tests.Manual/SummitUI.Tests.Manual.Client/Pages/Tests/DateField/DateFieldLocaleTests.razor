@page "/tests/date-field/locale"
@rendermode InteractiveWebAssembly
@using System.Globalization

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>DateField Locale Placeholder Tests</h1>
    <p>Tests that placeholder text is correctly localized for different locales.</p>

    <div class="test-section" data-testid="swedish-locale-section">
        <label>Swedish (sv-SE)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("sv-SE"))" Format="yyyy-MM-dd">
            <DateFieldInput class="datefield-input" />
        </DateFieldRoot>
        <p class="expected">Expected: åååå-mm-dd</p>
    </div>

    <div class="test-section" data-testid="german-locale-section">
        <label>German (de-DE)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("de-DE"))" Format="dd.MM.yyyy">
            <DateFieldInput class="datefield-input" />
        </DateFieldRoot>
        <p class="expected">Expected: tt.mm.jjjj</p>
    </div>

    <div class="test-section" data-testid="french-locale-section">
        <label>French (fr-FR)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("fr-FR"))" Format="dd/MM/yyyy">
            <DateFieldInput class="datefield-input" />
        </DateFieldRoot>
        <p class="expected">Expected: jj/mm/aaaa</p>
    </div>

    <div class="test-section" data-testid="norwegian-locale-section">
        <label>Norwegian (nb-NO)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("nb-NO"))" Format="yyyy-MM-dd">
            <DateFieldInput class="datefield-input" />
