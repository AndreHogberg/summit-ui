        <label>English (en-US)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("en-US"))" Format="MM/dd/yyyy">
            <DateFieldInput class="datefield-input" />
        </DateFieldRoot>
        <p class="expected">Expected: mm/dd/yyyy</p>
    </div>

    <div class="test-section" data-testid="unknown-locale-section">
        <label>Unknown (xx-XX - should fallback to English)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("xx-XX"))" Format="yyyy-MM-dd">
            <DateFieldInput class="datefield-input" />
        </DateFieldRoot>
        <p class="expected">Expected: yyyy-mm-dd (English fallback)</p>
    </div>
</div>
}

<style>
    .datefield-input {
        display: inline-flex;
        padding: 4px 8px;
        border: 1px solid #ccc;
        background: white;
    }

    .test-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #eee;
    }

    .expected {
        font-size: 0.85em;
        color: #666;
        margin-top: 0.5rem;
    }
</style>

@code {
    private DateOnly? _nullDate = null;
}
