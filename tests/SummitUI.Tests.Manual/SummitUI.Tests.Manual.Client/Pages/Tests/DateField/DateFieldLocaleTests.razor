        <p class="expected">Expected: åååå-mm-dd</p>
    </div>

    <div class="test-section" data-testid="danish-locale-section">
        <label>Danish (da-DK)</label>
        <DateFieldRoot @bind-Value="_nullDate" Culture="@(new CultureInfo("da-DK"))" Format="yyyy-MM-dd">
