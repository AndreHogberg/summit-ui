@page "/tests/alertdialog/destructive"
@rendermode InteractiveWebAssembly
@inject IAlertDialogService AlertDialogService

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>AlertDialog Destructive Tests</h1>
    
    <div class="test-section">
        <h2>Destructive AlertDialog</h2>
        <p>When IsDestructive is true, the Cancel button receives initial focus.</p>
        <button type="button" 
                class="trigger-button" 
                data-testid="destructive-trigger" 
                @onclick="ShowDestructiveAlert">
            Delete Item
        </button>
        <div data-testid="destructive-result">@_destructiveResult</div>
    </div>

    <div class="test-section">
        <h2>Non-Destructive AlertDialog</h2>
        <p>When IsDestructive is false, the first focusable element receives focus.</p>
        <button type="button" 
                class="trigger-button" 
                data-testid="normal-trigger" 
                @onclick="ShowNormalAlert">
            Show Normal Alert
        </button>
        <div data-testid="normal-result">@_normalResult</div>
    </div>

</div>
}

<style>
    .trigger-button {
        padding: 8px 16px;
        border: 1px solid #ccc;
        background: #f0f0f0;
        cursor: pointer;
    }
    
    .alert-content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 24px;
        border: 1px solid #ccc;
        background: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        border-radius: 8px;
        min-width: 300px;
        z-index: 100;
    }

    .alert-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        z-index: 90;
    }
    
    .alert-title {
        margin: 0 0 8px;
        font-size: 1.25rem;
        font-weight: 600;
    }
    
    .alert-description {
        margin: 0 0 16px;
        color: #666;
    }
    
    .alert-actions {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
    }
    
    .btn-cancel, .btn-confirm {
        padding: 8px 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .btn-confirm {
        background: #0066cc;
        color: white;
        border-color: #0066cc;
    }
    
    .btn-danger {
        background: #dc3545;
        color: white;
        border-color: #dc3545;
    }
    
    .test-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #eee;
    }
</style>

@code {
    private string _destructiveResult = "Not triggered";
    private string _normalResult = "Not triggered";

    private async Task ShowDestructiveAlert()
    {
        var result = await AlertDialogService.ConfirmAsync(
            "This action cannot be undone. Are you sure you want to delete this item?",
            new AlertDialogOptions
            {
                Title = "Delete Item",
                ConfirmText = "Delete",
                CancelText = "Keep",
                IsDestructive = true
            });
        _destructiveResult = result ? "Deleted" : "Kept";
    }

    private async Task ShowNormalAlert()
    {
        var result = await AlertDialogService.ConfirmAsync(
            "This is a normal, non-destructive alert.",
            new AlertDialogOptions
            {
                Title = "Normal Alert",
                IsDestructive = false
            });
        _normalResult = result ? "Confirmed" : "Cancelled";
    }
}
