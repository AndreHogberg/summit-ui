@page "/tests/alertdialog/focus"
@rendermode InteractiveWebAssembly
@inject IAlertDialogService AlertDialogService

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>AlertDialog Focus Tests</h1>
    
    <div class="test-section">
        <h2>Focus Trap Test</h2>
        <button type="button" 
                class="trigger-button" 
                data-testid="focus-trigger" 
                @onclick="ShowFocusAlert">
            Show Alert
        </button>
        <div data-testid="focus-result">@_result</div>
    </div>

    <div style="height: 200vh;">
        Spacer to enable scrolling
    </div>
</div>
}

<style>
    .trigger-button {
        padding: 8px 16px;
        border: 1px solid #ccc;
        background: #f0f0f0;
        cursor: pointer;
    }
    
    .alert-content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 24px;
        border: 1px solid #ccc;
        background: white;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        border-radius: 8px;
        min-width: 300px;
        z-index: 100;
    }

    .alert-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        z-index: 90;
    }
    
    .alert-title {
        margin: 0 0 8px;
        font-size: 1.25rem;
        font-weight: 600;
    }
    
    .alert-description {
        margin: 0 0 16px;
        color: #666;
    }
    
    .alert-actions {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
    }
    
    .btn-cancel, .btn-confirm {
        padding: 8px 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .btn-confirm {
        background: #0066cc;
        color: white;
        border-color: #0066cc;
    }
    
    .test-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #eee;
    }
</style>

@code {
    private string _result = "Not triggered";

    private async Task ShowFocusAlert()
    {
        var result = await AlertDialogService.ConfirmAsync(
            "This dialog traps focus within its content.",
            new AlertDialogOptions { Title = "Focus Test" });
        _result = result ? "Confirmed" : "Cancelled";
    }
}
