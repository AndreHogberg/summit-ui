@page "/tests/dialog/nested"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Nested Dialog Tests</h1>
    
    <SmDialogRoot>
        <SmDialogTrigger class="dialog-trigger" data-testid="parent-trigger">Open Parent Dialog</SmDialogTrigger>
        <SmDialogPortal>
            <SmDialogOverlay class="dialog-overlay" />
            <SmDialogContent class="dialog-content" data-testid="parent-content" style="--summit-dialog-depth: 0">
                <SmDialogTitle>Parent Dialog</SmDialogTitle>
                <SmDialogRoot>
                    <SmDialogTrigger class="dialog-trigger" data-testid="nested-trigger">Open Nested Dialog</SmDialogTrigger>
                    <SmDialogPortal>
                        <SmDialogOverlay class="dialog-overlay" style="background: rgba(0,0,0,0.3)" />
                        <SmDialogContent class="dialog-content" data-testid="nested-content" style="--summit-dialog-depth: 1">
                            <SmDialogTitle>Nested Dialog</SmDialogTitle>
                            <SmDialogClose class="dialog-close" data-testid="nested-close">Close Nested</SmDialogClose>
                        </SmDialogContent>
                    </SmDialogPortal>
                </SmDialogRoot>
                <SmDialogClose class="dialog-close" data-testid="parent-close">Close Parent</SmDialogClose>
            </SmDialogContent>
        </SmDialogPortal>
    </SmDialogRoot>
</div>
}

<style>
    .dialog-trigger { padding: 8px 16px; }
    .dialog-content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 24px;
        background: white;
        z-index: calc(100 + var(--summit-dialog-depth, 0));
    }
    .dialog-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        z-index: calc(90 + var(--summit-dialog-depth, 0));
    }
</style>
