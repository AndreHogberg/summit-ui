@page "/tests/dialog/focus"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Dialog Focus & Scroll Tests</h1>
    
    <div class="test-section">
        <h2>Form Dialog</h2>
        <DialogRoot>
            <DialogTrigger class="dialog-trigger" data-testid="form-trigger">Edit Profile</DialogTrigger>
            <DialogPortal>
                <DialogOverlay class="dialog-overlay" />
                <DialogContent class="dialog-content" data-testid="form-content">
                    <DialogTitle>Edit Profile</DialogTitle>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" data-testid="name-input" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" data-testid="email-input" />
                    </div>
                    <div class="actions">
                        <DialogClose class="dialog-close" data-testid="cancel-button">Cancel</DialogClose>
                        <DialogClose class="dialog-close" data-testid="save-button">Save</DialogClose>
                    </div>
                </DialogContent>
            </DialogPortal>
        </DialogRoot>
    </div>

    <div style="height: 200vh;">
        Spacer to enable scrolling
    </div>
</div>
}

<style>
    .dialog-trigger { padding: 8px 16px; }
    .dialog-content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 24px;
        background: white;
        z-index: 100;
    }
    .dialog-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        z-index: 90;
    }
    .form-group { margin-bottom: 1rem; }
</style>
