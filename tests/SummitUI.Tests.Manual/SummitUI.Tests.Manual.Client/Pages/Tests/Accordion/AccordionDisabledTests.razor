@page "/tests/accordion/disabled"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Accordion Disabled Tests</h1>

    <!-- Accordion with disabled items for testing disabled behavior -->
    <SmAccordionRoot DefaultValue="enabled-1" data-testid="accordion">
        <SmAccordionItem Value="enabled-1" data-testid="item-enabled-1">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-enabled-1">Enabled Item</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-enabled-1">
                <p>This item works normally.</p>
            </SmAccordionContent>
        </SmAccordionItem>

        <SmAccordionItem Value="disabled-1" Disabled="true" data-testid="item-disabled-1">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-disabled-1">Disabled Item</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-disabled-1">
                <p>You shouldn't be able to see this!</p>
            </SmAccordionContent>
        </SmAccordionItem>

        <SmAccordionItem Value="enabled-2" data-testid="item-enabled-2">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-enabled-2">Another Enabled Item</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-enabled-2">
                <p>Keyboard navigation skips the disabled item.</p>
            </SmAccordionContent>
        </SmAccordionItem>
    </SmAccordionRoot>
</div>
}

<style>
    [data-summit-accordion-item] {
        border: 1px solid #ccc;
        margin-bottom: 4px;
    }

    [data-summit-accordion-trigger] {
        display: flex;
        width: 100%;
        padding: 12px 16px;
        background: #f5f5f5;
        border: none;
        cursor: pointer;
        text-align: left;
    }

    [data-summit-accordion-trigger][data-state="open"] {
        background: #e0e0e0;
    }

    [data-summit-accordion-trigger][data-disabled] {
        opacity: 0.5;
        cursor: not-allowed;
    }

    [data-summit-accordion-content] {
        padding: 12px 16px;
    }
</style>
