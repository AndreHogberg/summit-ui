@page "/tests/accordion/keyboard"
@rendermode InteractiveWebAssembly

@if (!RendererInfo.IsInteractive)
{
    <div data-testid="page-loading">Loading...</div>
}
else
{
<div data-testid="page-ready">
    <h1>Accordion Keyboard Tests</h1>

    <!-- Single accordion with 3 items for keyboard navigation testing -->
    <SmAccordionRoot DefaultValue="item-1" data-testid="accordion">
        <SmAccordionItem Value="item-1" data-testid="item-1">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-1">Item 1 Title</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-1">
                <p>Item 1 content goes here.</p>
            </SmAccordionContent>
        </SmAccordionItem>

        <SmAccordionItem Value="item-2" data-testid="item-2">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-2">Item 2 Title</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-2">
                <p>Item 2 content goes here.</p>
            </SmAccordionContent>
        </SmAccordionItem>

        <SmAccordionItem Value="item-3" data-testid="item-3">
            <SmAccordionHeader>
                <SmAccordionTrigger data-testid="trigger-3">Item 3 Title</SmAccordionTrigger>
            </SmAccordionHeader>
            <SmAccordionContent data-testid="content-3">
                <p>Item 3 content goes here.</p>
            </SmAccordionContent>
        </SmAccordionItem>
    </SmAccordionRoot>
</div>
}

<style>
    [data-summit-accordion-item] {
        border: 1px solid #ccc;
        margin-bottom: 4px;
    }

    [data-summit-accordion-trigger] {
        display: flex;
        width: 100%;
        padding: 12px 16px;
        background: #f5f5f5;
        border: none;
        cursor: pointer;
        text-align: left;
    }

    [data-summit-accordion-trigger][data-state="open"] {
        background: #e0e0e0;
    }

    [data-summit-accordion-content] {
        padding: 12px 16px;
    }
</style>
