@namespace SummitUI

@* The calendar grid table. Implements role="grid" for accessibility. *@

<table id="@Context.GridId"
       role="application"
       aria-roledescription="calendar grid"
       aria-labelledby="@Context.HeadingId"
       aria-description="Use arrow keys to navigate dates, Enter or Space to select"
       data-summit-calendar-grid
       @ref="_elementRef"
       @attributes="AdditionalAttributes">
    @ChildContent
</table>
