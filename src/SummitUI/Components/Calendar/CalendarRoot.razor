@namespace SummitUI

@* The root component for the Calendar. Provides context and manages state. *@

<div data-summit-calendar-root
     data-disabled="@(Disabled ? "true" : null)"
     data-readonly="@(ReadOnly ? "true" : null)"
     @attributes="AdditionalAttributes">

    @* Visually hidden live region for screen reader announcements *@
    <div aria-live="assertive"
         aria-atomic="true"
         style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0, 0, 0, 0); white-space: nowrap; border: 0;">
        @_context.FocusAnnouncement
    </div>

    <CascadingValue Value="this" IsFixed="true">
        <CascadingValue Value="_context" IsFixed="false">
            @if (ChildContent is not null)
            {
                @ChildContent(_context.GetChildContext())
            }
        </CascadingValue>
    </CascadingValue>
</div>
