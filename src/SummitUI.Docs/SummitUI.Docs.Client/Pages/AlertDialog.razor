@page "/docs/alert-dialog"
@layout DocsLayout
@rendermode InteractiveWebAssembly
@using SummitUI.Docs.Design
<PageTitle>SummitUI - AlertDialog</PageTitle>

<div class="flex flex-col gap-12">
    @* Header *@
    <div class="flex flex-col gap-4">
        <div>
            <SuBadge Variant="SuBadgeVariant.Outline">Component</SuBadge>
        </div>
        <SuHeading Level="SuHeadingLevel.H1" class="flex flex-row items-center gap-4">
            Alert Dialog
            <SuPromptButton ComponentName="AlertDialog" />
        </SuHeading>
        <SuText Lead="true" Muted="true">
            An alert dialog interrupting the user with important content and expects an immediate response.
        </SuText>
    </div>

    @* Live Demo *@
    <SuSection Title="Demo">
        <SuCard>
            <button class="inline-flex items-center justify-center rounded-md bg-su-destructive px-4 py-2 text-sm font-medium text-destructive-foreground hover:bg-su-destructive/90 transition-colors" @onclick="ShowDemoDialog">
                Delete Account
            </button>
        </SuCard>
    </SuSection>

    @* Features *@
    <SuSection Title="Features">
        <ul class="grid gap-2 text-sm text-su-muted-foreground">
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Programmatic API similar to <code>window.confirm()</code>
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Async/await with <code>ValueTask&lt;bool&gt;</code> return
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Destructive action support with visual indicators
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Customizable title, message, and button text
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Configurable escape and overlay close behavior
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Provider pattern for app-wide availability
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Focus management for destructive dialogs
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                Animation support
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-su-primary"><path d="M20 6 9 17l-5-5"/></svg>
                WCAG compliant with <code>role="alertdialog"</code>
            </li>
        </ul>
    </SuSection>

    @* Installation *@
    <SuSection Title="Installation">
        <SuCodeBlock Code="dotnet add package SummitUI" Language="bash" />
    </SuSection>

    @* Setup *@
    <SuSection Title="Setup">
        <SuAlert Variant="SuAlertVariant.Info">
            <SuAlertTitle>Required Setup</SuAlertTitle>
            <SuAlertDescription>
                AlertDialog requires a provider at the app root and an interactive render mode.
            </SuAlertDescription>
        </SuAlert>

        <div class="mt-6 flex flex-col gap-6">
            <SuText Size="SuTextSize.Small" Muted="true">
                Create a wrapper component to enable interactive render mode for the provider:
            </SuText>
            <SuCodeBlock Code="@setupWrapperCode" Language="razor" />

            <SuText Size="SuTextSize.Small" Muted="true">
                Then place the wrapper in your MainLayout or App.razor:
            </SuText>
            <SuCodeBlock Code="@setupPlacementCode" Language="razor" />
        </div>
    </SuSection>

    @* Anatomy *@
    <SuSection Title="Anatomy" Description="Import the components and structure them as follows:">
        <SuCodeBlock Code="@anatomyCode" Language="razor" />
    </SuSection>

    @* Sub-components *@
    <SuSection Title="Sub-components">
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <SuCard>
                <SuCardTitle>AlertDialogProvider</SuCardTitle>
                <SuCardDescription class="mt-1">Root provider that manages dialog lifecycle and responds to service events.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogContent</SuCardTitle>
                <SuCardDescription class="mt-1">Main alert dialog panel with focus trapping and scroll locking.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogTitle</SuCardTitle>
                <SuCardDescription class="mt-1">Accessible title component with auto-generated ID.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogDescription</SuCardTitle>
                <SuCardDescription class="mt-1">Accessible message/description component with auto-generated ID.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogConfirm</SuCardTitle>
                <SuCardDescription class="mt-1">Confirm button that completes the dialog with <code>true</code>.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogCancel</SuCardTitle>
                <SuCardDescription class="mt-1">Cancel button that completes the dialog with <code>false</code>.</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogOverlay</SuCardTitle>
                <SuCardDescription class="mt-1">Backdrop overlay that can close the dialog when clicked (if configured).</SuCardDescription>
            </SuCard>
            <SuCard>
                <SuCardTitle>AlertDialogPortal</SuCardTitle>
                <SuCardDescription class="mt-1">Fixed-position container for rendering outside of DOM hierarchy.</SuCardDescription>
            </SuCard>
        </div>
    </SuSection>

    @* API Reference *@
    <SuSection Title="API Reference">
        <div class="flex flex-col gap-12">
            @foreach (var table in new[] {
                (Title: "IAlertDialogService", Props: serviceInterfaceProperties),
                (Title: "AlertDialogOptions", Props: alertDialogOptionsProperties),
                (Title: "AlertDialogProvider", Props: alertDialogProviderProperties),
                (Title: "AlertDialogContent", Props: alertDialogContentProperties),
                (Title: "AlertDialogTitle", Props: alertDialogTitleProperties),
                (Title: "AlertDialogDescription", Props: alertDialogDescriptionProperties),
                (Title: "AlertDialogConfirm", Props: alertDialogConfirmProperties),
                (Title: "AlertDialogCancel", Props: alertDialogCancelProperties),
                (Title: "AlertDialogOverlay", Props: alertDialogOverlayProperties),
                (Title: "AlertDialogPortal", Props: alertDialogPortalProperties)
            })
            {
                <div class="flex flex-col gap-3">
                    <SuHeading Level="SuHeadingLevel.H3">@table.Title</SuHeading>
                    <SuTable>
                        <SuTableHeader>
                            <SuTableRow>
                                <SuTableHead>Property</SuTableHead>
                                <SuTableHead>Type</SuTableHead>
                                <SuTableHead>Default</SuTableHead>
                                <SuTableHead>Description</SuTableHead>
                            </SuTableRow>
                        </SuTableHeader>
                        <SuTableBody>
                            @foreach (var prop in table.Props)
                            {
                                <SuTableRow>
                                    <SuTableCell class="font-mono text-su-primary font-medium">
                                        @prop.Name
                                        @if (prop.Required)
                                        {
                                            <SuBadge Variant="SuBadgeVariant.Destructive" Size="SuSize.Small" class="ml-2">required</SuBadge>
                                        }
                                    </SuTableCell>
                                    <SuTableCell class="font-mono text-su-muted-foreground text-sm">@prop.Type</SuTableCell>
                                    <SuTableCell class="font-mono text-su-muted-foreground text-sm">@(prop.Default ?? "-")</SuTableCell>
                                    <SuTableCell class="text-su-muted-foreground">@(prop.Description ?? "-")</SuTableCell>
                                </SuTableRow>
                            }
                        </SuTableBody>
                    </SuTable>
                </div>
            }
        </div>
    </SuSection>

    @* Examples *@
    <SuSection Title="Examples">
        <div class="flex flex-col gap-8">
            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">Simple Confirmation</SuHeading>
                <SuText Size="SuTextSize.Small" Muted="true">Basic confirm dialog with custom text.</SuText>
                <SuCodeBlock Code="@simpleExampleCode" Language="razor" />
            </div>

            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">Destructive Action</SuHeading>
                <SuText Size="SuTextSize.Small" Muted="true">Confirmation dialog for destructive actions with visual warning.</SuText>
                <SuCodeBlock Code="@destructiveExampleCode" Language="razor" />
            </div>

            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">Custom Options</SuHeading>
                <SuText Size="SuTextSize.Small" Muted="true">Full customization of dialog appearance and behavior.</SuText>
                <SuCodeBlock Code="@customOptionsExampleCode" Language="razor" />
            </div>

            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">Programmatic Control</SuHeading>
                <SuText Size="SuTextSize.Small" Muted="true">Using the service in component code with full async/await pattern.</SuText>
                <SuCodeBlock Code="@programmaticExampleCode" Language="razor" />
            </div>
        </div>
    </SuSection>

    @* Styling *@
    <SuSection Title="Styling">
        <div class="flex flex-col gap-12">
            <div class="flex flex-col gap-3">
                <SuHeading Level="SuHeadingLevel.H3">Data Attributes</SuHeading>
                <SuTable>
                    <SuTableHeader>
                        <SuTableRow>
                            <SuTableHead>Attribute</SuTableHead>
                            <SuTableHead>Values</SuTableHead>
                            <SuTableHead>Description</SuTableHead>
                        </SuTableRow>
                    </SuTableHeader>
                    <SuTableBody>
                        @foreach (var attr in dataAttributes)
                        {
                            <SuTableRow>
                                <SuTableCell class="font-mono text-su-primary font-medium">@attr.Name</SuTableCell>
                                <SuTableCell class="font-mono text-su-muted-foreground text-sm">@attr.Type</SuTableCell>
                                <SuTableCell class="text-su-muted-foreground">@attr.Description</SuTableCell>
                            </SuTableRow>
                        }
                    </SuTableBody>
                </SuTable>
            </div>

            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">CSS Example</SuHeading>
                <SuCodeBlock Code="@cssExampleCode" Language="css" />
            </div>
        </div>
    </SuSection>

    @* Accessibility *@
    <SuSection Title="Accessibility">
        <div class="flex flex-col gap-12">
            <div class="flex flex-col gap-3">
                <SuHeading Level="SuHeadingLevel.H3">Keyboard Navigation</SuHeading>
                <SuTable>
                    <SuTableHeader>
                        <SuTableRow>
                            <SuTableHead>Key</SuTableHead>
                            <SuTableHead>Action</SuTableHead>
                        </SuTableRow>
                    </SuTableHeader>
                    <SuTableBody>
                        @foreach (var nav in keyboardNavigation)
                        {
                            <SuTableRow>
                                <SuTableCell class="font-medium text-su-foreground">@nav.Name</SuTableCell>
                                <SuTableCell class="text-su-muted-foreground">@nav.Description</SuTableCell>
                            </SuTableRow>
                        }
                    </SuTableBody>
                </SuTable>
            </div>

            <div class="flex flex-col gap-4">
                <SuHeading Level="SuHeadingLevel.H3">ARIA Attributes</SuHeading>
                <ul class="grid gap-2 text-sm text-su-muted-foreground">
                    <li class="flex items-start gap-2">
                        <span class="text-su-foreground font-medium shrink-0">AlertDialogContent:</span>
                        <span>Has <code>role="alertdialog"</code>, <code>aria-modal</code>, <code>aria-labelledby</code>, and <code>aria-describedby</code></span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-su-foreground font-medium shrink-0">AlertDialogTitle:</span>
                        <span>Auto-generates ID and is referenced by content's <code>aria-labelledby</code></span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-su-foreground font-medium shrink-0">AlertDialogDescription:</span>
                        <span>Auto-generates ID and is referenced by content's <code>aria-describedby</code></span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-su-foreground font-medium shrink-0">Destructive dialogs:</span>
                        <span>Focus is automatically set to cancel button first for destructive actions</span>
                    </li>
                </ul>
            </div>
        </div>
    </SuSection>
</div>

