@page "/docs/accordion"
@layout DocsLayout
@rendermode InteractiveWebAssembly

<div class="flex flex-col gap-12">
    @* Header *@
    <div class="flex flex-col gap-4">
        <div class="flex items-center gap-2">
            <span class="inline-flex items-center rounded-full border border-border bg-muted/50 px-2.5 py-0.5 text-xs font-medium text-muted-foreground">
                Component
            </span>
        </div>
        <h1 class="text-4xl font-bold tracking-tight">Accordion</h1>
        <p class="text-xl text-muted-foreground leading-relaxed">
            A vertically stacked set of interactive headings that each reveal an associated section of content.
        </p>
    </div>

    @* Live Demo *@
    <section class="flex flex-col gap-4">
        <h2 class="text-lg font-semibold text-foreground">Demo</h2>
        <div class="rounded-xl border border-border bg-card p-6">
            <AccordionRoot DefaultValue="item-1">
                <AccordionItem Value="item-1" class="border-b border-border">
                    <AccordionHeader class="flex">
                        <AccordionTrigger class="demo-trigger">
                            <span>Is it accessible?</span>
                            <svg class="demo-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="m6 9 6 6 6-6"/>
                            </svg>
                        </AccordionTrigger>
                    </AccordionHeader>
                    <AccordionContent class="demo-content">
                        <div class="pb-4 pt-0 text-sm text-muted-foreground">
                            Yes. It adheres to the WAI-ARIA design pattern for accordions, including proper keyboard navigation and ARIA attributes.
                        </div>
                    </AccordionContent>
                </AccordionItem>
                <AccordionItem Value="item-2" class="border-b border-border">
                    <AccordionHeader class="flex">
                        <AccordionTrigger class="demo-trigger">
                            <span>Is it styled?</span>
                            <svg class="demo-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="m6 9 6 6 6-6"/>
                            </svg>
                        </AccordionTrigger>
                    </AccordionHeader>
                    <AccordionContent class="demo-content">
                        <div class="pb-4 pt-0 text-sm text-muted-foreground">
                            No. It's completely unstyled by default, giving you full control over the appearance using CSS and data attributes.
                        </div>
                    </AccordionContent>
                </AccordionItem>
                <AccordionItem Value="item-3" class="border-b border-border">
                    <AccordionHeader class="flex">
                        <AccordionTrigger class="demo-trigger">
                            <span>Can I use it with animations?</span>
                            <svg class="demo-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="m6 9 6 6 6-6"/>
                            </svg>
                        </AccordionTrigger>
                    </AccordionHeader>
                    <AccordionContent class="demo-content">
                        <div class="pb-4 pt-0 text-sm text-muted-foreground">
                            Yes! CSS variables for height and width are automatically set, allowing smooth CSS transitions for expand/collapse animations.
                        </div>
                    </AccordionContent>
                </AccordionItem>
            </AccordionRoot>
        </div>
    </section>

    @* Features *@
    <section class="flex flex-col gap-4">
        <h2 class="text-lg font-semibold text-foreground">Features</h2>
        <ul class="grid gap-2 text-sm text-muted-foreground">
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                Full keyboard navigation
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                Single or multiple expanded items
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                Controlled and uncontrolled modes
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                Collapsible option for single mode
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                Horizontal and vertical orientations
            </li>
            <li class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground"><path d="M20 6 9 17l-5-5"/></svg>
                WCAG compliant with proper ARIA attributes
            </li>
        </ul>
    </section>

    @* Installation *@
    <section class="flex flex-col gap-4">
        <h2 class="text-lg font-semibold text-foreground">Installation</h2>
        <div class="code-block">
            <pre><code class="language-bash">dotnet add package SummitUI</code></pre>
        </div>
    </section>

    @* Anatomy *@
    <section class="flex flex-col gap-4">
        <h2 class="text-lg font-semibold text-foreground">Anatomy</h2>
        <p class="text-sm text-muted-foreground">Import the components and structure them as follows:</p>
        <div class="code-block">
            <pre><code class="language-xml">@anatomyCode</code></pre>
        </div>
    </section>

    @* Sub-components *@
    <section class="flex flex-col gap-6">
        <h2 class="text-lg font-semibold text-foreground">Sub-components</h2>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <div class="rounded-lg border border-border p-4">
                <h3 class="font-medium text-foreground">AccordionRoot</h3>
                <p class="mt-1 text-sm text-muted-foreground">Root container that manages state and provides context to all children.</p>
            </div>
            <div class="rounded-lg border border-border p-4">
                <h3 class="font-medium text-foreground">AccordionItem</h3>
                <p class="mt-1 text-sm text-muted-foreground">Individual collapsible section container with a unique value identifier.</p>
            </div>
            <div class="rounded-lg border border-border p-4">
                <h3 class="font-medium text-foreground">AccordionHeader</h3>
                <p class="mt-1 text-sm text-muted-foreground">Semantic heading wrapper that provides proper heading semantics.</p>
            </div>
            <div class="rounded-lg border border-border p-4">
                <h3 class="font-medium text-foreground">AccordionTrigger</h3>
                <p class="mt-1 text-sm text-muted-foreground">Interactive button that toggles the associated content panel.</p>
            </div>
            <div class="rounded-lg border border-border p-4">
                <h3 class="font-medium text-foreground">AccordionContent</h3>
                <p class="mt-1 text-sm text-muted-foreground">Collapsible content panel that shows/hides based on state.</p>
            </div>
        </div>
    </section>

    @* API Reference *@
    <section class="flex flex-col gap-6">
        <h2 class="text-2xl font-bold tracking-tight">API Reference</h2>
        
        @* AccordionRoot *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground border-b border-border pb-2">AccordionRoot</h3>
            <p class="text-sm text-muted-foreground">The root component that manages accordion state and provides cascading context.</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>Type</code></td>
                            <td><code>AccordionType</code></td>
                            <td><code>Single</code></td>
                            <td>Whether one or multiple items can be expanded</td>
                        </tr>
                        <tr>
                            <td><code>Value</code></td>
                            <td><code>string?</code></td>
                            <td><code>null</code></td>
                            <td>Controlled expanded value (single mode)</td>
                        </tr>
                        <tr>
                            <td><code>Values</code></td>
                            <td><code>IReadOnlyList&lt;string&gt;?</code></td>
                            <td><code>null</code></td>
                            <td>Controlled expanded values (multiple mode)</td>
                        </tr>
                        <tr>
                            <td><code>DefaultValue</code></td>
                            <td><code>string?</code></td>
                            <td><code>null</code></td>
                            <td>Default expanded value (uncontrolled, single)</td>
                        </tr>
                        <tr>
                            <td><code>DefaultValues</code></td>
                            <td><code>IReadOnlyList&lt;string&gt;?</code></td>
                            <td><code>null</code></td>
                            <td>Default expanded values (uncontrolled, multiple)</td>
                        </tr>
                        <tr>
                            <td><code>ValueChanged</code></td>
                            <td><code>EventCallback&lt;string?&gt;</code></td>
                            <td>-</td>
                            <td>Callback when value changes (single mode)</td>
                        </tr>
                        <tr>
                            <td><code>ValuesChanged</code></td>
                            <td><code>EventCallback&lt;IReadOnlyList&lt;string&gt;&gt;</code></td>
                            <td>-</td>
                            <td>Callback when values change (multiple mode)</td>
                        </tr>
                        <tr>
                            <td><code>Orientation</code></td>
                            <td><code>AccordionOrientation</code></td>
                            <td><code>Vertical</code></td>
                            <td>Affects keyboard navigation direction</td>
                        </tr>
                        <tr>
                            <td><code>Loop</code></td>
                            <td><code>bool</code></td>
                            <td><code>true</code></td>
                            <td>Whether keyboard nav loops from last to first</td>
                        </tr>
                        <tr>
                            <td><code>Disabled</code></td>
                            <td><code>bool</code></td>
                            <td><code>false</code></td>
                            <td>Disable the entire accordion</td>
                        </tr>
                        <tr>
                            <td><code>Collapsible</code></td>
                            <td><code>bool</code></td>
                            <td><code>true</code></td>
                            <td>Allow closing the last open item (single mode)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* AccordionItem *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground border-b border-border pb-2">AccordionItem</h3>
            <p class="text-sm text-muted-foreground">Container for an individual accordion section.</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>Value</code></td>
                            <td><code>string</code></td>
                            <td><span class="text-destructive">Required</span></td>
                            <td>Unique identifier for this accordion item</td>
                        </tr>
                        <tr>
                            <td><code>As</code></td>
                            <td><code>string</code></td>
                            <td><code>"div"</code></td>
                            <td>HTML element to render</td>
                        </tr>
                        <tr>
                            <td><code>Disabled</code></td>
                            <td><code>bool</code></td>
                            <td><code>false</code></td>
                            <td>Disable this specific item</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* AccordionHeader *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground border-b border-border pb-2">AccordionHeader</h3>
            <p class="text-sm text-muted-foreground">Semantic heading wrapper for the trigger.</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>As</code></td>
                            <td><code>string</code></td>
                            <td><code>"h3"</code></td>
                            <td>HTML element to render</td>
                        </tr>
                        <tr>
                            <td><code>Level</code></td>
                            <td><code>int</code></td>
                            <td><code>3</code></td>
                            <td>ARIA heading level (1-6)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* AccordionTrigger *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground border-b border-border pb-2">AccordionTrigger</h3>
            <p class="text-sm text-muted-foreground">Interactive button that toggles the content panel.</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>As</code></td>
                            <td><code>string</code></td>
                            <td><code>"button"</code></td>
                            <td>HTML element to render</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @* AccordionContent *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground border-b border-border pb-2">AccordionContent</h3>
            <p class="text-sm text-muted-foreground">Collapsible content panel.</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Type</th>
                            <th>Default</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>As</code></td>
                            <td><code>string</code></td>
                            <td><code>"div"</code></td>
                            <td>HTML element to render</td>
                        </tr>
                        <tr>
                            <td><code>ForceMount</code></td>
                            <td><code>bool</code></td>
                            <td><code>false</code></td>
                            <td>Always render in DOM (useful for CSS animations)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    @* Examples *@
    <section class="flex flex-col gap-6">
        <h2 class="text-2xl font-bold tracking-tight">Examples</h2>
        
        @* Basic *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Basic Usage</h3>
            <div class="code-block">
                <pre><code class="language-xml">@basicExampleCode</code></pre>
            </div>
        </div>

        @* Multiple Mode *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Multiple Expanded Items</h3>
            <p class="text-sm text-muted-foreground">Allow multiple items to be expanded simultaneously.</p>
            <div class="code-block">
                <pre><code class="language-xml">@multipleExampleCode</code></pre>
            </div>
        </div>

        @* Controlled *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Controlled Mode</h3>
            <p class="text-sm text-muted-foreground">Control the expanded state externally.</p>
            <div class="code-block">
                <pre><code class="language-csharp">@controlledExampleCode</code></pre>
            </div>
        </div>

        @* Disabled *@
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Disabled Items</h3>
            <p class="text-sm text-muted-foreground">Disable specific accordion items.</p>
            <div class="code-block">
                <pre><code class="language-xml">@disabledExampleCode</code></pre>
            </div>
        </div>
    </section>

    @* Styling *@
    <section class="flex flex-col gap-6">
        <h2 class="text-2xl font-bold tracking-tight">Styling</h2>
        
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Data Attributes</h3>
            <p class="text-sm text-muted-foreground">Use these data attributes to style different states:</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Attribute</th>
                            <th>Values</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>data-state</code></td>
                            <td><code>"open"</code> | <code>"closed"</code></td>
                            <td>Current expansion state</td>
                        </tr>
                        <tr>
                            <td><code>data-disabled</code></td>
                            <td>Present when disabled</td>
                            <td>Indicates disabled state</td>
                        </tr>
                        <tr>
                            <td><code>data-orientation</code></td>
                            <td><code>"vertical"</code> | <code>"horizontal"</code></td>
                            <td>Current orientation</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">CSS Variables</h3>
            <p class="text-sm text-muted-foreground">These CSS variables are automatically set for animations:</p>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Variable</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>--summit-accordion-content-height</code></td>
                            <td>Measured height of content in pixels</td>
                        </tr>
                        <tr>
                            <td><code>--summit-accordion-content-width</code></td>
                            <td>Measured width of content in pixels</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">CSS Example</h3>
            <div class="code-block">
                <pre><code class="language-css">@cssExampleCode</code></pre>
            </div>
        </div>
    </section>

    @* Accessibility *@
    <section class="flex flex-col gap-6">
        <h2 class="text-2xl font-bold tracking-tight">Accessibility</h2>
        
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">Keyboard Navigation</h3>
            <div class="overflow-x-auto">
                <table class="api-table">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><kbd>Enter</kbd> / <kbd>Space</kbd></td>
                            <td>Toggle the focused accordion item</td>
                        </tr>
                        <tr>
                            <td><kbd>ArrowDown</kbd></td>
                            <td>Move focus to next trigger (vertical)</td>
                        </tr>
                        <tr>
                            <td><kbd>ArrowUp</kbd></td>
                            <td>Move focus to previous trigger (vertical)</td>
                        </tr>
                        <tr>
                            <td><kbd>ArrowRight</kbd></td>
                            <td>Move focus to next trigger (horizontal)</td>
                        </tr>
                        <tr>
                            <td><kbd>ArrowLeft</kbd></td>
                            <td>Move focus to previous trigger (horizontal)</td>
                        </tr>
                        <tr>
                            <td><kbd>Home</kbd></td>
                            <td>Move focus to first trigger</td>
                        </tr>
                        <tr>
                            <td><kbd>End</kbd></td>
                            <td>Move focus to last trigger</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-semibold text-foreground">ARIA Attributes</h3>
            <ul class="grid gap-2 text-sm text-muted-foreground">
                <li class="flex items-start gap-2">
                    <span class="text-foreground font-medium shrink-0">AccordionHeader:</span>
                    <span>Renders with <code>role="heading"</code> and appropriate <code>aria-level</code></span>
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-foreground font-medium shrink-0">AccordionTrigger:</span>
                    <span>Renders as button with <code>aria-expanded</code> and <code>aria-controls</code></span>
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-foreground font-medium shrink-0">AccordionContent:</span>
                    <span>Renders with <code>role="region"</code> and <code>aria-labelledby</code></span>
                </li>
            </ul>
        </div>
    </section>
</div>

<style>
    /* Demo Accordion Styles */
    .demo-trigger {
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        font-size: 0.9375rem;
        font-weight: 500;
        background: transparent;
        border: none;
        cursor: pointer;
        color: hsl(var(--foreground));
        transition: color 0.15s;
        width: 100%;
        text-align: left;
    }
    
    .demo-trigger:hover {
        color: hsl(var(--muted-foreground));
    }
    
    .demo-trigger[data-disabled] {
        opacity: 0.5;
        cursor: not-allowed;
    }
    
    .demo-chevron {
        transition: transform 0.2s ease;
    }
    
    .demo-trigger[data-state="open"] .demo-chevron {
        transform: rotate(180deg);
    }
    
    .demo-content {
        overflow: hidden;
    }
    
    .demo-content[data-state="closed"] {
        display: none;
    }
</style>

@code {
    private const string anatomyCode = @"<AccordionRoot>
    <AccordionItem Value=""item-1"">
        <AccordionHeader>
            <AccordionTrigger>Title</AccordionTrigger>
        </AccordionHeader>
        <AccordionContent>
            Content goes here...
        </AccordionContent>
    </AccordionItem>
</AccordionRoot>";

    private const string basicExampleCode = @"<AccordionRoot DefaultValue=""item-1"">
    <AccordionItem Value=""item-1"">
        <AccordionHeader>
            <AccordionTrigger>What is SummitUI?</AccordionTrigger>
        </AccordionHeader>
        <AccordionContent>
            <p>SummitUI is a Blazor component library focused on accessibility.</p>
        </AccordionContent>
    </AccordionItem>
    <AccordionItem Value=""item-2"">
        <AccordionHeader>
            <AccordionTrigger>Is it accessible?</AccordionTrigger>
        </AccordionHeader>
        <AccordionContent>
            <p>Yes! All components are built with WCAG compliance in mind.</p>
        </AccordionContent>
    </AccordionItem>
</AccordionRoot>";

    private const string multipleExampleCode = @"<AccordionRoot Type=""AccordionType.Multiple"" 
               DefaultValues=""@(new[] { ""item-1"", ""item-2"" })"">
