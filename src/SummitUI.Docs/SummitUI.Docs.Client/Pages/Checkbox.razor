    @* Controlled Mode Demo *@
    <SuSection Title="Controlled Mode">
        <SuText Size="SuTextSize.Small" Muted="true" class="mb-4">
            Control the checkbox state programmatically using external buttons. This pattern is useful for complex UIs requiring external state management.
        </SuText>
        <SuCard>
            <div class="flex flex-col gap-4">
                <div class="flex items-center gap-3 p-3 bg-su-muted/50 rounded-md border border-su-border">
                    <span class="text-sm font-medium">Current state:</span>
                    <code class="text-xs bg-su-background px-2 py-1 rounded border border-su-border">@(controlledChecked ? "Checked" : "Unchecked")</code>
                    <div class="flex gap-2 ml-auto">
                        <button @onclick="@(() => controlledChecked = true)" class="px-3 py-1 text-xs font-medium bg-su-primary text-su-primary-foreground rounded hover:bg-su-primary/90">
                            Check
                        </button>
                        <button @onclick="@(() => controlledChecked = false)" class="px-3 py-1 text-xs font-medium bg-su-secondary text-su-secondary-foreground rounded hover:bg-su-secondary/80">
                            Uncheck
                        </button>
                        <button @onclick="@(() => controlledChecked = !controlledChecked)" class="px-3 py-1 text-xs font-medium bg-su-secondary text-su-secondary-foreground rounded hover:bg-su-secondary/80">
                            Toggle
                        </button>
                    </div>
                </div>
                <label class="flex items-center gap-3 cursor-pointer">
                    <SmCheckboxRoot @bind-Checked="controlledChecked" AriaLabel="Controlled checkbox" class="demo-checkbox">
                        <SmCheckboxIndicator class="demo-indicator">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
