                                    CheckedChanged="HandleSelectAllChanged"
                                    Indeterminate="selectAllIndeterminate"
                                    AriaLabel="Select all items"
                                    class="demo-checkbox">
                        <SmCheckboxIndicator class="demo-indicator">
                            @if (selectAllIndeterminate)
