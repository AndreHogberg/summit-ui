@implements IAsyncDisposable
@inject NavigationManager Navigation
@inject ThemeJsInterop ThemeInterop

@* Mobile Sidebar using Dialog *@
<DialogRoot Open="@isSidebarOpen" OpenChanged="@(v => isSidebarOpen = v)">
    <DialogPortal>
        <DialogOverlay class="fixed inset-0 bg-black/60 backdrop-blur-sm z-90 data-[state=open]:animate-in data-[state=open]:fade-in data-[state=closed]:animate-out data-[state=closed]:fade-out duration-300 md:hidden" />
        <DialogContent class="fixed top-0 left-0 h-screen w-[280px] bg-su-background border-r border-su-border z-100 data-[state=open]:animate-in data-[state=open]:slide-in-from-left data-[state=closed]:animate-out data-[state=closed]:slide-out-to-left duration-300 md:hidden" As="aside">
            <DialogTitle class="sr-only">Navigation Menu</DialogTitle>
            <div class="flex h-14 items-center justify-between border-b border-su-border px-6">
                <a href="/" class="flex items-center gap-2.5 font-semibold text-su-foreground" @onclick="CloseSidebar">
                    <img src="/Logo.svg" alt="SummitUI Logo" class="h-7 w-7 rounded-md" />
                    <span class="text-base">SummitUI</span>
                </a>
                <DialogClose class="flex h-8 w-8 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors" 
                             AriaLabel="Close menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </DialogClose>
            </div>
            <div class="sidebar-scroll-area">
                <DocsSidebar />
            </div>
        </DialogContent>
    </DialogPortal>

    <header class="sticky top-0 z-50 w-full border-b border-su-border bg-su-background/80 backdrop-blur-xl supports-[backdrop-filter]:bg-su-background/60">
        <div class="flex h-14 items-center">
            @* Left section - Logo area (responsive width) *@
            <div class="flex h-full shrink-0 items-center px-4 md:w-[280px] md:border-r md:border-su-border md:px-6">
                @* Hamburger Menu Button (mobile only) *@
                <DialogTrigger class="mr-3 flex h-8 w-8 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent md:hidden transition-colors" 
                               aria-label="Open navigation menu">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="4" y1="12" x2="20" y2="12"></line>
                        <line x1="4" y1="6" x2="20" y2="6"></line>
                        <line x1="4" y1="18" x2="20" y2="18"></line>
                    </svg>
                </DialogTrigger>

                @* Logo *@
                <a href="/" class="flex items-center gap-2.5 font-semibold text-su-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-su-ring focus-visible:ring-offset-2 focus-visible:ring-offset-su-background rounded-md transition-colors" aria-label="SummitUI Home">
                    <img src="/Logo.svg" alt="SummitUI Logo" class="h-7 w-7 rounded-md" />
                    <span class="text-base">SummitUI</span>
                </a>
            </div>

            @* Right section - Navigation *@
            <div class="flex flex-1 items-center justify-between px-4 md:px-6">
                @* Mobile: Show current page title *@
                <span class="md:hidden text-sm font-medium text-su-foreground truncate max-w-[180px]">@CurrentPageTitle</span>
                
                @* Desktop: Show breadcrumbs *@
                <div class="hidden md:flex items-center gap-4">
                    <Breadcrumbs />
                </div>

                <div class="flex items-center gap-2 ml-auto">
                    @* Theme Toggle Button *@
                    <button @onclick="ToggleThemeAsync"
                            class="flex h-8 w-8 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors"
                            aria-label="@(isDarkMode ? "Switch to light mode" : "Switch to dark mode")">
                        @if (isDarkMode)
                        {
                            @* Sun icon - shown in dark mode to switch to light *@
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="4"></circle>
                                <path d="M12 2v2"></path>
                                <path d="M12 20v2"></path>
                                <path d="m4.93 4.93 1.41 1.41"></path>
                                <path d="m17.66 17.66 1.41 1.41"></path>
                                <path d="M2 12h2"></path>
                                <path d="M20 12h2"></path>
                                <path d="m6.34 17.66-1.41 1.41"></path>
                                <path d="m19.07 4.93-1.41 1.41"></path>
                            </svg>
                        }
                        else
                        {
                            @* Moon icon - shown in light mode to switch to dark *@
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
                            </svg>
                        }
                    </button>

                    <a href="https://github.com/andrehogberg/summit-ui" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="flex h-8 w-8 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors"
                       aria-label="GitHub repository">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </header>
</DialogRoot>

@code {
    private bool isSidebarOpen;
    private bool isDarkMode;
    private bool _isInitialized;

    private string CurrentPageTitle
    {
        get
        {
            var uri = new Uri(Navigation.Uri);
            var segments = uri.AbsolutePath.Split('/', StringSplitOptions.RemoveEmptyEntries);
            if (segments.Length == 0) return "Docs";
            
            var lastSegment = segments[^1];
            if (string.Equals(lastSegment, "llms", StringComparison.OrdinalIgnoreCase)) return "llms.txt";
            if (string.Equals(lastSegment, "docs", StringComparison.OrdinalIgnoreCase)) return "Introduction";
            
            // Capitalize first letter
            return char.ToUpper(lastSegment[0]) + lastSegment[1..];
        }
    }

    private void CloseSidebar()
    {
        isSidebarOpen = false;
        StateHasChanged();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await InvokeAsync(async () =>
        {
            CloseSidebar();
            // Re-sync theme state after navigation
            await SyncThemeStateAsync();
        });
    }

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || !_isInitialized)
        {
            _isInitialized = true;
            await SyncThemeStateAsync();
        }
    }

    private async Task SyncThemeStateAsync()
    {
        try
        {
            isDarkMode = await ThemeInterop.IsDarkModeAsync();
            StateHasChanged();
        }
        catch (JSDisconnectedException)
        {
            // Ignore - component is being disposed
        }
        catch (ObjectDisposedException)
        {
            // Ignore - JS module reference was disposed
        }
    }

    private async Task ToggleThemeAsync()
    {
        var newTheme = await ThemeInterop.ToggleThemeAsync();
        isDarkMode = newTheme == "dark";
    }

    public ValueTask DisposeAsync()
    {
        Navigation.LocationChanged -= OnLocationChanged;
        // Note: Do not dispose ThemeInterop here - it's a scoped service managed by DI
        // Disposing it would break other components sharing the same instance
        return ValueTask.CompletedTask;
    }
}
