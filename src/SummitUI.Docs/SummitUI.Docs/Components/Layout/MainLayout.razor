@inherits LayoutComponentBase
@implements IAsyncDisposable
@inject NavigationManager Navigation
@inject ThemeJsInterop ThemeInterop

<div class="min-h-screen bg-su-background text-su-foreground">
    <header class="sticky top-0 z-50 w-full border-b border-su-border bg-su-background/95 backdrop-blur supports-[backdrop-filter]:bg-su-background/60">
        <div class="container mx-auto flex h-14 items-center justify-between px-4 sm:px-6">
            <div class="flex items-center gap-2">
                <a href="/" class="flex items-center gap-2 font-bold focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-su-ring focus-visible:ring-offset-2 rounded-md transition-colors" aria-label="SummitUI Home">
                    <img src="/Logo.svg" alt="SummitUI Logo" class="h-7 w-7 rounded-md" />
                    <span class="inline-block">SummitUI</span>
                </a>
            </div>
            
            @* Desktop Navigation *@
            <nav class="hidden sm:flex items-center gap-4 text-sm font-medium" aria-label="Main Navigation">
                <NavLink tabindex="0" href="/docs" class="transition-colors text-su-muted-foreground hover:text-su-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-su-ring rounded-sm">Components</NavLink>
                <NavLink tabindex="0" href="https://github.com/andrehogberg/summit-ui" target="_blank" class="transition-colors text-su-muted-foreground hover:text-su-foreground flex items-center gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-su-ring rounded-sm" rel="noopener noreferrer">
                    GitHub
                </NavLink>
                <button @onclick="ToggleThemeAsync"
                        class="flex h-8 w-8 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors"
                        aria-label="@(isDarkMode ? "Switch to light mode" : "Switch to dark mode")">
                    @if (isDarkMode)
                    {
                        @* Sun icon - shown in dark mode to switch to light *@
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="4"></circle>
                            <path d="M12 2v2"></path>
                            <path d="M12 20v2"></path>
                            <path d="m4.93 4.93 1.41 1.41"></path>
                            <path d="m17.66 17.66 1.41 1.41"></path>
                            <path d="M2 12h2"></path>
                            <path d="M20 12h2"></path>
                            <path d="m6.34 17.66-1.41 1.41"></path>
                            <path d="m19.07 4.93-1.41 1.41"></path>
                        </svg>
                    }
                    else
                    {
                        @* Moon icon - shown in light mode to switch to dark *@
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
                        </svg>
                    }
                </button>
            </nav>
            
            @* Mobile Navigation *@
            <div class="flex sm:hidden items-center gap-2">
                <NavLink href="/docs" class="flex h-9 w-9 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors" aria-label="Components">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="7" height="7" x="3" y="3" rx="1"/>
                        <rect width="7" height="7" x="14" y="3" rx="1"/>
                        <rect width="7" height="7" x="14" y="14" rx="1"/>
                        <rect width="7" height="7" x="3" y="14" rx="1"/>
                    </svg>
                </NavLink>
                <button @onclick="ToggleThemeAsync"
                        class="flex h-9 w-9 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors"
                        aria-label="@(isDarkMode ? "Switch to light mode" : "Switch to dark mode")">
                    @if (isDarkMode)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="4"></circle>
                            <path d="M12 2v2"></path>
                            <path d="M12 20v2"></path>
                            <path d="m4.93 4.93 1.41 1.41"></path>
                            <path d="m17.66 17.66 1.41 1.41"></path>
                            <path d="M2 12h2"></path>
                            <path d="M20 12h2"></path>
                            <path d="m6.34 17.66-1.41 1.41"></path>
                            <path d="m19.07 4.93-1.41 1.41"></path>
                        </svg>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
                        </svg>
                    }
                </button>
                <a href="https://github.com/andrehogberg/summit-ui" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="flex h-9 w-9 items-center justify-center rounded-md text-su-muted-foreground hover:text-su-foreground hover:bg-su-accent transition-colors"
                   aria-label="GitHub repository">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
            </div>
        </div>
    </header>

    <main id="main-content" class="flex-1">
        @Body
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload focus-ring">Reload</a>
    <span class="dismiss">X</span>
</div>

@code {
    private bool isDarkMode;
    private bool _isInitialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || !_isInitialized)
        {
            _isInitialized = true;
            await SyncThemeStateAsync();
        }
    }

    private async Task SyncThemeStateAsync()
    {
        try
        {
            isDarkMode = await ThemeInterop.IsDarkModeAsync();
            StateHasChanged();
        }
        catch (JSDisconnectedException)
        {
            // Ignore - component is being disposed
        }
    }

    private async Task ToggleThemeAsync()
    {
        var newTheme = await ThemeInterop.ToggleThemeAsync();
        isDarkMode = newTheme == "dark";
    }

    public async ValueTask DisposeAsync()
    {
        await ThemeInterop.DisposeAsync();
    }
}
